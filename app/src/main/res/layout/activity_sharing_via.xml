<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SharingViaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/MainColor">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share Via"
        android:textColor="@color/mainTxtsColor"
        android:textStyle="bold"
        android:layout_margin="18dp"
        android:textSize="30dp"
        android:gravity="center"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@color/MainColor"
        android:gravity="center"
        android:orientation="vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Facebook"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/sharevia_fb_shape"
            android:textSize="30dp"
            android:gravity="center"
            android:id="@+id/mfacebookShare"
            android:layout_margin="18dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="G+"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/sharingvia_google_shape"
            android:textSize="30dp"
            android:gravity="center"
            android:id="@+id/mGshare"
            android:layout_margin="18dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="WhatsApp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/sharevia_whatsapp_shape"
            android:textSize="30dp"
            android:gravity="center"
            android:id="@+id/mwhatsAppshare"
            android:layout_margin="18dp"/>


    </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>